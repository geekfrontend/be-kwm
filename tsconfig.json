{
	"compilerOptions": {
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"lib": ["esnext"],
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ES2022",
		"types": ["node", "jest"],
		"skipLibCheck": true,
		"isolatedModules": true
	},
	"include": ["src", "tests"]
}
